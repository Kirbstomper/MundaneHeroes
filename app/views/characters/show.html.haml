%h2 Character Sheet

%ul#details
  %li
    Name:
    = @character.name
  %li
    Power:
    = Power.find(@character.power_id).name
  %li
    GameID:
    = @character.game_id
  %li
    Health:
    = "#{@character.cur_hp}/#{@character.max_hp}" 
  %li
    Action Points:
    = @character.ap
  %li
    Luck Points:
    = @character.luck_points
  %li
    Melee Damage:
    = "#{@character.damage_melee}/#{@character.damage_melee+2}"
  %li
    Ranged Damage:
    = "#{@character.damage_range}/#{@character.damage_range+1}"
  %li
    Strength:
    = @character.str
  %li
    Perception:
    = @character.per
  %li
    Endurance:
    = @character.end
  %li
    Int:
    = @character.int
  %li
    Charisma:
    = @character.cha
  %li
    Luck:
    = @character.luck
  %li
    Dexterity:
    = @character.dex
  
    
    
%h3 Interests:
=@character.interest
%h3 Inventory:
=@character.inventory


= link_to 'Edit', edit_character_path(@character)
= button_to 'Delete', character_path(@character), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to game list', user_path(session[:id])