%head Mundane Heroes

%h1 Login

= form_tag users_path, :method =>  :get do 
 
  = label :user, :username, 'Username'
  = text_field :user, :username
 
  = label :user, :password, 'Password'
  = password_field :user, :password

  = submit_tag 'Play'

%h1 Create User
 
= form_tag users_path, :method => :post do
 
  = label :user, :username, 'Username'
  = text_field :user, :username
 
  = label :user, :password, 'Password'
  = password_field :user, :password

  = submit_tag 'Make Account'